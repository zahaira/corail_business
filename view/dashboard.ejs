<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <style>
      html,
      body {
        height: 100%;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
      }

      .dashboard {
        display: flex;
        /* margin: 0 auto; */
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        height: 100%;
      }

      .sidebar {
        width: 200px;
        padding: 20px;
        background-color: #2c3e50;
        color: #fff;
        height: 100%;
      }

      .content {
        flex: 1;
        padding: 20px;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }

      th,
      td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }

      th {
        background-color: #2c3e50;
        color: #ecf0f1;
      }

      h1 {
        text-align: center;
        color: #2c3e50;
      }

      .sidebar a {
        display: block;
        color: #fff;
        padding: 10px 10px;
        text-decoration: none;
      }

      .active {
        background-color: #374c61;
      }
      .user-info {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        padding: 10px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
      }
      .user-image {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin-right: 10px;
        object-fit: cover;
      }

      .user-name {
        color: #2c3e50;
      }
    </style>
  </head>
  <body>
    <div class="dashboard">
      <div class="sidebar">
        <a href="">Dashboard</a>
        <a href="" class="active">Tickets</a>
        <!-- Add more sidebar options as needed -->
      </div>

      <div class="content">
        <div class="user-info">
          <img src="/user.jpeg" alt="User Image" class="user-image" />
          <span class="user-name">Bilal Wardi</span>
        </div>

        <h1>Ticket List</h1>
        <table>
          <thead>
            <tr>
              <th>Nom du client</th>
              <th>Email</th>
              <th>NÂ°ticket</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody id="ticketList">
            <% ticketData.forEach(ticket => { %>
            <tr>
              <td><%= ticket.name %></td>
              <td><%= ticket.email %></td>
              <td><%= ticket.numticket %></td>
              <td>
                <%= ticket.created.toLocaleString('en-US', { year: 'numeric',
                month: '2-digit', day: '2-digit', hour: '2-digit', minute:
                '2-digit', second: '2-digit', hour12: false }) %>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
